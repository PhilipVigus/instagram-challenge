<h1>New Picture</h1>

<%= form_with scope: :picture, url: pictures_path, local: true do |form| %>
  <div>
    <%= form.label :caption, 'Please enter a caption for your picture' %>
  </div>
  <div>
    <%= form.text_field :caption %>
  </div>
  <div>
    <%= form.label :picture, 'Please choose a picture to upload' %>
  </div>
  <div>
    <%= form.file_field :picture %>
  </div>
  <div>
  <%= form.submit "Submit" %>
  </div>

  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
<% end %>