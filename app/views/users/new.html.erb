<div class="small-form-container">
  <div class="small-form-header">
    Sign Up
  </div>
  <%= form_for @user do |form| %>
    <div>
      <%= form.label :username %>
      <%= form.text_field :username, class: 'form-field' %>
    </div>
    <div>
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-field' %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-field' %>
    </div>
    <div>
      <%= form.submit "Submit", class: 'form-button' %>
    </div>
    <div>
        Already have an account? <%= link_to '(Log in)', '/login' %>
    </div>
  <% end %>

  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>

  <% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
</div>